{
  "manifest_version": 3,
  "name": "React Content Script",
  "version": "1.0.0",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "http://localhost:4000/*",
    "<all_urls>"
  ],
  "action": {
    "default_title": "Popup",
    "default_popup": "index.html",
    "default_icon": "logo192.png"
  },
  "icons": {},
  "background": {
    "service_worker": "content-script/src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content-script/src/main.tsx"],
      "media": []
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
